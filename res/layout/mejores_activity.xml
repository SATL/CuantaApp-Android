<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
      >
    <ListView android:id="@android:id/list" android:layout_width="fill_parent"
							android:layout_height="fill_parent" 
							android:divider="@android:color/transparent"
							android:dividerHeight="20sp"
							android:layout_marginLeft="5dip" android:layout_marginRight="5dip" />
					
						<TextView android:id="@android:id/empty" android:layout_width="fill_parent"
							android:layout_height="fill_parent" android:text="@string/loading"
							android:gravity="center_vertical|center_horizontal" />
    

</LinearLayout>